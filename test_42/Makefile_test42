NAME = test42

FLAGS = -g -Wall -Werror -Wextra --std=c++98

#CXX = c++
CXX = clang++

SRCS = main_test42.cpp  ../test_stack.cpp  ../test_vector.cpp  ../test_map.cpp

OBJS = $(addprefix $(OBJS_FOLDER)/, $(OBJ))


all: 
	mkdir -p $(OBJS_FOLDER)
	make $(NAME)

$(OBJS_FOLDER)/ %.o: %.cpp
	$(CXX) $(FLAGS) -c $< -o $@

$(NAME): $(OBJS)
	$(CXX) $(FLAGS) $(OBJS) -o $(NAME)

clean:
	rm -rf $(OBJS_FOLDER)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re             
